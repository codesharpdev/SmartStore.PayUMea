@using System.Security.Policy
@using SmartStore.Web.Framework;
@model SmartStore.PayUMea.Models.PayUMeaStandardConfigurationModel
@{
	Layout = "";
}

<table class="plugin-intro-table">
	<tr>
		<td>
			<div class="alert alert-info">
				<button class="close" data-dismiss="alert">×</button>
				@Html.Raw(T("Plugins.Payments.PayUStandard.AdminInstruction"))
			</div>
		</td>
		<td>
			<a href="https://www.paypal.com/" target="_blank">
				<img src="@Url.Content("~/Plugins/SmartStore.PayU/Content/images/logo200x53.png")" alt="PayU" class="logo" />
			</a>
		</td>
	</tr>
</table>

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    <table class="adminContent configure-paypal-standard">
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.Username)
			</td>
			<td class="adminData">
				@Html.SettingEditorFor(model => model.Username)
				@Html.ValidationMessageFor(model => model.Username)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.Password)
			</td>
			<td class="adminData">
				@Html.SettingEditorFor(model => model.Password)
				@Html.ValidationMessageFor(model => model.Password)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.SafeKey)
			</td>
			<td class="adminData">
				@Html.SettingEditorFor(model => model.SafeKey)
				@Html.ValidationMessageFor(model => model.SafeKey)
			</td>
		</tr>

        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.AdditionalFee)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.AdditionalFee)
                @Html.ValidationMessageFor(model => model.AdditionalFee)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.AdditionalFeePercentage)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.AdditionalFeePercentage)
                @Html.ValidationMessageFor(model => model.AdditionalFeePercentage)
            </td>
        </tr>

        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.EnableIpn)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.EnableIpn)
                @Html.ValidationMessageFor(model => model.EnableIpn)
            </td>
        </tr>
        <tr class="ipn-url">
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.IpnUrl)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.IpnUrl)
                @Html.ValidationMessageFor(model => model.IpnUrl)
            </td>
	    </tr> 
		<tr class="ipn-url">
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.ApiUrl)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.ApiUrl)
                @Html.ValidationMessageFor(model => model.ApiUrl)
            </td>
	    </tr> 
		<tr class="ipn-url">
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.RedirectUrl)
            </td>
            <td class="adminData">
                @Html.SettingEditorFor(model => model.RedirectUrl)
                @Html.ValidationMessageFor(model => model.RedirectUrl)
            </td>
        </tr>
		<tr class="ipn-url">
			<td colspan="2">
				<div class="alert alert-info">
					@T("Plugins.Payments.PayUStandard.Fields.EnableIpn.Hint2")
				</div>
			</td>
		</tr>
        <tr>
            <td class="adminTitle">
                &nbsp;
            </td>
            <td class="adminData">
                <button type="submit" name="save" class="btn btn-primary" value="save">
                    <i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")
                </button>
            </td>
        </tr>
    </table>
}

<script type="text/javascript">
	$(document).ready(function () {

		$("#@Html.FieldIdFor(model => model.EnableIpn)").change(function () {
			$('.ipn-url').toggle($(this).is(':checked'));
		}).trigger('change');

	});
</script>